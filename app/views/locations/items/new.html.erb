<%= provide(:title, "Location")%>
<%= content_for :header_text, flush: true do %>
  Add an Item to this Location
<% end %>

<div class = form-custom>
  <%= form_with(url: "/locations/#{@location.id}/items", local: true) do |f|%>
    <div class = 'form-div'>
      <%= f.collection_select :item_id, @current_user.items,:id,:name,{prompt: 'Select an item'}%>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary"%>
  <% end%>
</div>