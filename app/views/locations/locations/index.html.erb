<% provide(:title, "Locations")%>
<% provide(:header_text, "My Locations")%>

<% if@current_user.can_crud_non_root_location?%>
  <%= button_to "New", new_location_path, method: :get, class: "button-new"%>
<% end %>

<% @locations.each do |location| %>
  <% content_for :indexed_delete_button, flush: true do %>
    <% link_to "Delete", location_path(location), method: :delete%>
  <% end %>
  <%= render partial: 'indexed_location', :locals => {:location => location}%>
<% end %>