<% provide(:title, @location.name)%>
<div class= "jumbotron jumbotron-fluid">
  <%= @location.name %>
</div>

<div class= "jumbotron jumbotron-fluid">
  <div>
    Parent location:
  </div>
  <% unless @location.parent.nil?%>
    <%= link_to @location.parent.name, @location.parent%>
  <% end %>
</div>

<div class= "jumbotron jumbotron-fluid">
  <%= link_to "Edit Location", edit_location_path%>
</div>

<div class= "jumbotron jumbotron-fluid">
  <div>
    Description:
  </div>
  <%=@location.description %>
</div>

<div class= "jumbotron jumbotron-fluid">
  <%=link_to "Sub-Locations", location_sublocations_path(@location) %>
</div>

<div class= "jumbotron jumbotron-fluid">
  <%=link_to "Items", location_items_path(@location) %>
</div>

<div class= "jumbotron jumbotron-fluid">
  <%=link_to "Access Groups", location_access_groups_path(@location) %>
</div>