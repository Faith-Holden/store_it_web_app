<% provide(:title, "Groups")%>
<% provide(:header_text, "My Access Groups")%>

<% if@current_user.is_sys_admin?%>
  <%= button_to "New", new_access_group_path, method: :get, class: "button-new"%>
<% end %>

<% @access_groups.each do |access_group| %>
  <% content_for :indexed_delete_button, flush: true do %>
    <% link_to "Delete", access_group_path(access_group), method: :delete%>
  <% end %>
  <%= render partial: 'indexed_access_group', :locals => {:access_group => access_group}%>
<% end %>
