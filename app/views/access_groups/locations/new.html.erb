<%= provide(:title, "Access Group")%>
<%= content_for :header_text, flush: true do %>
  Add a Location to Access Group:
  <%=@access_group.name%>
<% end %>

<div class = form-custom>
  <%= form_with(url: "/access_groups/#{@access_group.id}/locations", local: true) do |f|%>
    <div class = 'form-div'>
      <%= f.collection_select :location_id, @current_user.locations,:id,:name, {prompt: 'Select a location to add'}%>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary"%>
  <% end%>
</div>