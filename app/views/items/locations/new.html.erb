<%= provide(:title, "Items")%>
<%= content_for :header_text, flush: true do %>
  Add Item to Location
<% end %>

<div class = form-custom>
  <%= form_with(url: "/items/#{@item.id}/locations", local: true) do |f|%>
    <div class = 'form-div'>
      <%=f.collection_select :location_id, @current_user.locations_with_visible_items,:id,:name,{prompt: 'Select a location'}%>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary"%>
  <% end%>
</div>