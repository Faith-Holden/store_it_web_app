<% provide(:title, "Items")%>
<%= content_for :header_text, flush: true do %>
  Locations with Item: 
  <%= link_to @item.name, @item%>
<% end %>
<%= button_to "Add to Existing", new_item_location_path(@item), method: :get, class: "button-add"%>

<% @locations.each do |location| %>
  <% content_for :indexed_delete_button, flush: true do %>
    <% link_to "Remove", item_location_path(@item, location), method: :delete%>
  <% end %>
  <%= render partial: 'locations/locations/indexed_location', :locals => {:location => location}%>
<% end %>
